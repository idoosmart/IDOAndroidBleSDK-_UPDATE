<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:text="@string/set_para_user_info_tips"
        android:textColor="@color/red"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/public_line" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/public_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/set_para_user_info_birthday"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_year"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:hint="@string/set_para_user_info_year"
            android:inputType="number"
            android:text="1992"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_month"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:hint="@string/set_para_user_info_month"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_day"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:hint="@string/set_para_user_info_day"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/public_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/set_para_user_info_sex"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_nan"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/set_para_user_info_person_sex_boy"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_nv"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/set_para_user_info_person_sex_girl"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/public_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/set_para_user_info_height"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/public_bg"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text="170"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/public_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/set_para_user_info_weight"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ed_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/public_bg"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text="60"
            android:textColor="@color/public_text_38"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/public_line" />

    <Button
        android:id="@+id/btn_set_use_info"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:text="@string/set"
        android:textSize="13sp" />

</LinearLayout>